{
  "manifest_version": 3,
  "name": "WA - Download Guard üõ°Ô∏è",
  "short_name": "WA DL Guard",
  "version": "1.0.0",
  "description": "Bloqueia downloads potencialmente maliciosos do WhatsApp.",
  "minimum_chrome_version": "114",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": { "default_title": "WA - Download Guard" },
  "permissions": [
    "downloads",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "https://*.whatsapp.com/*",
    "https://*.whatsapp.net/*",
    "https://wa.me/*",
    "https://gist.githubusercontent.com/*"
  ],
  "background": { "service_worker": "sw.js", "type": "module" },
  "content_scripts": [
    {
      "matches": ["https://*.whatsapp.com/*", "https://wa.me/*"],
      "js": ["content-whatsapp.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "options_page": "options/options.html"
}
